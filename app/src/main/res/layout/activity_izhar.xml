<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Izhar"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Huruf - Huruf Izahr"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="#000"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ImageButton
                android:id="@+id/BtnHamzah"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:elevation="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/hamzah"/>
            <ImageButton
                android:id="@+id/BtnHaTipis"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:elevation="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/hatipis"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ImageButton
                android:id="@+id/BtnKho"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:elevation="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/kho"/>
            <ImageButton
                android:id="@+id/BtnAin"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:elevation="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/hatipis"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ImageButton
                android:id="@+id/BtnGhoin"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:elevation="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ghaoin"/>
            <ImageButton
                android:id="@+id/BtnHaTebal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:elevation="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/hatebal"/>
        </TableRow>

    </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>