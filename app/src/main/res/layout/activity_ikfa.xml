<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ikfa"
    android:orientation="vertical"
    android:background="#FDF6F0"    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Huruf - Huruf Ikhfa"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textColor="#000"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <ImageButton
                        android:id="@+id/BtnTaIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ta"/>
                    <ImageButton
                        android:id="@+id/BtnTsaIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/tsa"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <ImageButton
                        android:id="@+id/BtnJimIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/jim"/>
                    <ImageButton
                        android:id="@+id/BtnDalIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/dal"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <ImageButton
                        android:id="@+id/BtnDzaIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/dza"/>
                    <ImageButton
                        android:id="@+id/BtnZaIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/za"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <ImageButton
                        android:id="@+id/BtnSinIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/sin"/>
                    <ImageButton
                        android:id="@+id/BtnSyinIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/syin"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <ImageButton
                        android:id="@+id/BtnShodIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/shod"/>
                    <ImageButton
                        android:id="@+id/BtnDhodIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/dhod"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <ImageButton
                        android:id="@+id/BtnThoIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/tho"/>
                    <ImageButton
                        android:id="@+id/BtnDzoIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/dzo"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <ImageButton
                        android:id="@+id/BtnFaIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/fa"/>
                    <ImageButton
                        android:id="@+id/BtnQofIkfa"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/qof"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <ImageButton
                        android:id="@+id/BtnKafIkda"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/kaf"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>